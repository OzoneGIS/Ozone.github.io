{
  "name": "ozone",
  "version": "1.0.0",
  "private": false,
  "description": "create-react-app and nodejs server",
  "keywords": [
    "API",
    "REST",
    "Travis CI",
    "boilerplate",
    "coveralls",
    "es8",
    "eslint",
    "express",
    "generator",
    "istanbul",
    "mocha",
    "mongodb",
    "mongoose",
    "node.js",
    "nyc",
    "passport"
  ],
  "bugs": {
    "url": "https://github.com/SSites/Ozone/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SSites/Ozone.git"
  },
  "license": "MIT",
  "author": {
    "name": "Sustainable Sites"
  },
  "main": "src/index.js",
  "scripts": {
    "clean": "rm -rf ./node_modules yarn.lock ./client/node_modules ./client/yarn.lock",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "deploy": "sh ./deploy.sh",
    "dev": "nodemon ./src/index.js",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:start": "cross-env NODE_ENV=production pm2-docker start ./src/index.js",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit",
    "docs": "apidoc -i src -o docs",
    "postdocs": "opn docs/index.html",
    "lint": "eslint **/*.js --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint -- --fix",
    "lint:watch": "yarn lint -- --watch",
    "precommit": "yarn lint",
    "postpublish": "git push --tags",
    "prestart": "yarn docs",
    "start": "cross-env NODE_ENV=production pm2 start ./src/index.js",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text -x '**/authProviders.js' -x '**/mongoose.js' mocha --timeout 20000 --recursive $(find src -name '*test.js') --exit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 src/api/tests/integration",
    "test:unit": "cross-env NODE_ENV=test mocha src/api/tests/unit",
    "test:watch": "cross-env NODE_ENV=test mocha --watch src/api/tests/unit",
    "validate": "yarn lint && yarn test"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "bcryptjs": "2.4.3",
    "bluebird": "^3.7.2",
    "body-parser": "^1.17.0",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "cross-env": "^7.0.0",
    "dotenv-safe": "^8.2.0",
    "express": "^4.15.2",
    "express-rate-limit": "^5.0.0",
    "express-validation": "^1.0.3",
    "http-status": "^1.4.2",
    "helmet": "^3.21.2",
    "joi": "^14.0.0",
    "jwt-simple": "0.5.6",
    "lodash": "^4.17.4",
    "method-override": "^3.0.0",
    "moment-timezone": "^0.5.27",
    "mongoose": "^5.9.1",
    "morgan": "^1.8.1",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "4.0.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "apidoc": "^0.20.0",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^3.1.0",
    "mocha": "^7.0.1",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "opn-cli": "^5.0.0",
    "sinon": "^9.0.0",
    "sinon-chai": "^3.5.0",
    "supertest": "^4.0.2"
  },
  "engines": {
    "node": ">=10",
    "yarn": "*"
  }
}
